{
    "name": "LatimSNAP Dev Env",
    "image": "ghcr.io/vhxjaouen/latimsnap-dl:latest", // <--- THE CHANGE
    "runArgs": [
        "--net=host",
        "--ipc=host", // Recommended for X11/OpenGL stability
        "--env=DISPLAY=${localEnv:DISPLAY}",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "--device=/dev/dri:/dev/dri", 
        "--gpus=all"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    },
    "remoteUser": "root",
    "workspaceFolder": "/workspaces/latimsnap"
}
