{
    "name": "LatimSNAP Dev Env",
    "image": "latimsnap-dev", // Vérifie que ce nom correspond à ton build !
    "runArgs": [
        "--net=host",
        "--env=DISPLAY=${localEnv:DISPLAY}",
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
        "--device=/dev/dri:/dev/dri" // Accélération matérielle pour la 3D
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "ms-vscode.cpptools-extension-pack" // Pack complet pour le C++
            ]
        }
    },
    "remoteUser": "root",
    "workspaceFolder": "/workspaces/latimsnap"
}